<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:textSize="15pt"
        android:textAlignment="center"
        android:text="ĐĂNG NHẬP"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textUsername"
        android:layout_alignStart="@+id/textUsername"
        android:layout_alignRight="@+id/textUsername"
        android:layout_alignEnd="@+id/textUsername" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/admin_login_icon"
        android:layout_below="@+id/textView"
        android:layout_above="@+id/textView4"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <EditText
        android:id="@+id/textUsername"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_above="@+id/textView5"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/textPassword"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/signIn"
        android:textSize="10pt"
        android:text="Sign In"
        android:layout_below="@+id/textPassword"
        android:layout_alignLeft="@+id/textPassword"
        android:layout_alignStart="@+id/textPassword"
        android:layout_alignRight="@+id/textPassword"
        android:layout_alignEnd="@+id/textPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên đăng nhập"
        android:textSize="09pt"
        android:id="@+id/textView4"
        android:layout_above="@+id/textUsername"
        android:layout_alignLeft="@+id/textUsername"
        android:layout_alignStart="@+id/textUsername" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mật khẩu"
        android:textSize="09pt"
        android:id="@+id/textView5"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textPassword"
        android:layout_alignStart="@+id/textPassword" />

</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#E3F2FD"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:textSize="15pt"
        android:paddingLeft="55dp"
        android:textAlignment="center"
        android:text="ĐĂNG NHẬP"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textUsername"
        android:layout_alignStart="@+id/textUsername"
        android:layout_alignRight="@+id/textUsername"
        android:layout_alignEnd="@+id/textUsername" />
    <ImageView
        android:layout_width="140dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView4"
        android:src="@drawable/admin_login_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên đăng nhập:"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="30dp"
        android:textSize="09pt"
        android:textColor="#000000"
        android:id="@+id/textView4"/>
    <EditText
        android:id="@+id/textUsername"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="30dp"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:textColor="#37474F" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="260dp"
        android:text="Mật khẩu:"
        android:textColor="#000000"
        android:textSize="09pt"
        android:id="@+id/textView5" />
    <EditText
        android:id="@+id/textPassword"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="30dp"
        android:inputType="textPassword" />
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/signIn"
        android:textSize="10pt"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="30dp"
        android:text="OK"
        android:background="#00C853"/>
    <Button
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:id="@+id/cancel_action"
        android:textSize="10pt"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="200dp"
        android:text="Hủy bỏ"
        android:background="#00C853"/>

</RelativeLayout>

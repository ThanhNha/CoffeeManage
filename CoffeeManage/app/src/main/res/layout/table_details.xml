<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/relativeProductDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="400dp"
        android:background="#B0BEC5"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/table1"/>
                <TextView
                    android:layout_width="20dp"
                    android:textSize="14dp"
                    android:layout_marginLeft="39dp"
                    android:layout_marginTop="23dp"
                    android:id="@+id/tableNumber"
                    android:textColor="#000000"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="3"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="257dp"
                    android:textSize="17dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/textChitiet"
                    android:textColor="#1B5E20"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="CHI TIẾT THỨC UỐNG"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="70dp"
                        android:textSize="14dp"
                        android:id="@+id/tableNumber1"
                        android:textColor="#000000"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="Bàn số 3"/>
                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Món mới"
                        android:id="@+id/btnMonmoi" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="80dp"
        android:background="#3b5998"
        android:layout_gravity="center"
        android:baselineAligned="false">
        <TextView
            android:id="@+id/textTongsomon"
            android:layout_width="354dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:layout_height="match_parent"
            android:text="Tổng số món: 3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:background="#ffffff"
        android:layout_weight="0.69">
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:id="@+id/listProductDetails">
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="460dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/giohang"/>
        <Button
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="Thanh toán"
            android:textSize="11dp"
            android:id="@+id/btnThanhtoan"
            android:layout_gravity="bottom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="25dp"
            android:text="Tổng tiền:"
            android:textColor="#212121"
            android:textSize="14dp"
            android:id="@+id/textTong"
            android:gravity="right"
            android:layout_gravity="bottom" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="5dp"
            android:text="1530000đ"
            android:textColor="#283593"
            android:textSize="15dp"
            android:id="@+id/tvPriceTotal"
            android:gravity="right"
            android:layout_gravity="bottom" />
    </LinearLayout>
</RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relativeAddProduct"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:background="#3b5998"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/text"
                android:layout_width="167dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:layout_height="match_parent"
                android:text="Tên thức uống"/>
            <TextView
                android:id="@+id/textTongsomfon"
                android:layout_width="167dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:layout_height="match_parent"
                android:text="Số lượng"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_weight="0.69">
            <ListView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="410dp"
                android:id="@+id/listProductDetailsForAdd">
            </ListView>
        </LinearLayout>
<!--
        <LinearLayout
            android:layout_width="380dp"
            android:layout_marginTop="460dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xong"
                android:width="200dp"
                android:id="@+id/btnComplete"
                android:layout_gravity="bottom"
                android:layout_weight="5.60" />
        </LinearLayout>
        -->
    </RelativeLayout>

</LinearLayout>

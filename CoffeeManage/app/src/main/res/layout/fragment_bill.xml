<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.huynhthanhnha.myapplication.fragments.OneFragment">
    <RelativeLayout
        android:orientation="horizontal"
        android:background="#009688"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/text"
            android:layout_width="145dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:layout_height="match_parent"
            android:text="HÓA ĐƠN"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:backgroundTint="#ffffff"
            android:layout_marginLeft="150dp"
            android:id="@+id/spinnerBill"
            android:layout_centerVertical="true"
            android:popupTheme="@color/colorPrimary"
            android:popupBackground="#E0E0E0" />
    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="45dp"
        android:background="#3F51B5">
        <TextView
            android:layout_width="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="8dp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:text="STT"
            android:textSize="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:paddingLeft="45dp"
            android:paddingTop="8dp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:text="Ngày lập"
            android:textSize="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:paddingLeft="120dp"
            android:paddingTop="8dp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:text="Nhân viên lập"
            android:textSize="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:paddingLeft="220dp"
            android:paddingTop="8dp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:text="Tổng tiền"
            android:textSize="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="78dp"
        android:id="@+id/relativeAddProduct"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff">
            <ListView
                android:layout_marginTop="0dp"
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:id="@+id/listBill">
            </ListView>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="470dp"
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Tổng số tiền: "
            android:textColor="#000000"
            android:layout_alignParentBottom="true" />
        <TextView
            android:id="@+id/tvTotalAll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textSize="16dp"
            android:text="1150000 VNĐ"
            android:textColor="#0d035b"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_height="match_parent"
    android:background="@drawable/light_bg"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#3b5998"
        android:layout_height="44dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_keyboard_backspace_black_24dp"
                android:id="@+id/imageView" />
            <TextView
                android:layout_width="230dp"
                android:layout_height="46dp"
                android:layout_marginLeft="15dp"
                android:paddingTop="13dp"
                android:textColor="#FFFFFF"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Chào, Nguyễn Thanh Phi"
                android:textAlignment="center"
                android:layout_gravity="center|right"
                android:textSize="7pt"
                android:id="@+id/textShowName"
                android:layout_weight="0.5" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:src="@drawable/logouticon"
                android:id="@+id/imgLogout" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="100dp"
        android:paddingBottom="0dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:id="@+id/linearListOfficer"
        android:layout_width="167dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/nhanvien"
            android:id="@+id/imgOfficer"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="Danh sách nhân viên"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="60dp"
        android:id="@+id/linearStatistic"
        android:orientation="vertical"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/chart_pie"
            android:id="@+id/imageView2"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:text="Thống kê"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>




</LinearLayout>
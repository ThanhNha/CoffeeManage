<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="82dp"
        android:background="#3b5998"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/drinkicon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="257dp"
                    android:layout_height="32dp"
                    android:gravity="center_vertical"
                    android:text="DANH SÁCH THỨC UỐNG"
                    android:textColor="#ffffff"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="261dp"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:id="@+id/tvUserName"
                    android:text="Tên: Huỳnh Thanh Nhã"
                    android:textColor="@android:color/black"
                    android:textSize="6pt" />

                <TextView
                    android:layout_width="261dp"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:id="@+id/tvAuth"
                    android:text="Cấp: Nhân viên"
                    android:textColor="@android:color/black"
                    android:textSize="6pt" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:background="#607D8B"
        android:layout_gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:text="Tên thức uống"
            android:layout_gravity="center_vertical"
            android:textSize="13dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:gravity="right"
            android:layout_marginLeft="115dp"
            android:textColor="#ffffff"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="Giá thức uống"
            android:textSize="13dp" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical"
        tools:context="com.example.listtest.ListProductActivity">

        <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/drawer_layout"
            android:layout_width="300dp"
            android:layout_height="500dp">

            <!-- Drawer Content -->

            <FrameLayout
                android:id="@+id/content_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>

            <!-- The navigation menu -->

            <ListView
                android:id="@+id/left_drawer_child"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="#EEEEEE"
                android:choiceMode="singleChoice"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp" />
        </android.support.v4.widget.DrawerLayout>
    </LinearLayout>

</LinearLayout>
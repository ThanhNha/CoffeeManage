<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="400dp"
        android:background="#d8187eb9"
        android:layout_height="65dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/tea"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="257dp"
                    android:textSize="9pt"
                    android:textColor="#ffffff"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="Danh sách thức uống"/>
                <TextView
                    android:layout_width="261dp"
                    android:layout_height="25dp"
                    android:textSize="6pt"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"
                    android:text="Tổng sản phẩm: 30"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#BDBDBD"
        android:layout_gravity="center"
        android:baselineAligned="false"
        android:clickable="false">
        <TextView
            android:id="@+id/tvSumProduct"
            android:layout_width="354dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:textSize="10dp"
            android:textColor="#000000"
            android:layout_height="match_parent"
            android:text="Tổng sản phẩm: 30"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="vertical"
        tools:context="com.example.listtest.ListProductActivity" >

        <android.support.v4.widget.DrawerLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <!-- Drawer Content -->

            <FrameLayout
                android:id="@+id/content_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </FrameLayout>

            <!-- The navigation menu -->

            <ListView
                android:id="@+id/left_drawer_child"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="singleChoice"
                android:layout_gravity="start"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:background="@android:color/darker_gray" />
        </android.support.v4.widget.DrawerLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_weight="0.69">

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Thêm  "
            android:id="@+id/button4" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Xóa    "
            android:id="@+id/buttonf"
            android:layout_gravity="center_horizontal" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button5"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>


</LinearLayout>
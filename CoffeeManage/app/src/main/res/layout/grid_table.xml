<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="400dp"
        android:layout_height="90dp"
        android:background="#e7a0a0a0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="85dp"
                android:layout_marginTop="5dp"
                android:layout_height="85dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/cf1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="257dp"
                    android:textSize="9pt"
                    android:textColor="#ffffff"
                    android:layout_height="33dp"
                    android:gravity="center_vertical"
                    android:text="Cafe Quán Phố"/>

                <TextView
                    android:id="@+id/tvNameUser"
                    android:layout_width="261dp"
                    android:layout_height="25dp"
                    android:textSize="7pt"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"
                    android:text="Tên: Nguyễn Thanh Phi"/>

                <TextView
                    android:layout_width="261dp"
                    android:layout_height="30dp"
                    android:textSize="7pt"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"
                    android:text="Cấp: Nhân viên"
                    android:id="@+id/tvPermission" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#3b5998"
        android:layout_gravity="center"
        android:baselineAligned="false"
        android:clickable="false">
        <TextView
            android:layout_width="354dp"
            android:id="@+id/tvDate"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:layout_height="match_parent"
            android:text="Ngày 20/11/2015 8:30 PM"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_weight="0.69">
        <GridView
            android:layout_width="wrap_content"
            android:layout_height="330dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="50dp"
            android:id="@+id/gvListTable"
            android:numColumns="4">
        </GridView>
    </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#d8a6a6a6"
            android:layout_gravity="center"
            android:baselineAligned="false"
        android:clickable="false">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Thêm bàn mới"
                    android:id="@+id/btnAddTable"
                    android:layout_weight="0.06"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp" />
            </LinearLayout>

    </LinearLayout>

</LinearLayout>
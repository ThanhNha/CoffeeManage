<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="#B0BEC5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_keyboard_backspace_black_24dp"
            android:id="@+id/imgBackListOfficer" />

        <TextView
            android:layout_width="wrap_content"
            android:paddingTop="15dp"
            android:paddingLeft="5dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="DANH SÁCH NHÂN VIÊN"
            android:textSize="12dp"
            android:id="@+id/textView7" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/inputSearchOfficer"
                android:layout_width="match_parent"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:gravity="center_vertical"
                android:textSize="12dp"
                android:paddingLeft="38dp"
                android:textColor="#000000"
                android:background="@drawable/edit_text_login"
                android:layout_height="35dp"
                android:hint="Tìm nhân viên"/>
            <ImageView
                android:layout_marginTop="7dp"
                android:layout_marginLeft="5dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/search128"/>

        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#3F51B5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="7dp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:text="Tên nhân viên"
            android:textSize="11dp"/>
        <TextView
            android:layout_width="79dp"
            android:paddingLeft="45dp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:text="CMND"
            android:textSize="11dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:paddingLeft="20dp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:text="Ngày vào làm"
            android:textSize="11dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:paddingLeft="20dp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:text="G/Tính"
            android:textSize="11dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listViewOfficer" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Tổng số nhân viên: "
                android:textColor="#000000"
                android:textSize="11dp"
                android:id="@+id/tvSearchOfficer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/tvSumOfficer"
                android:text="6"
                android:textColor="@android:color/holo_red_light"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_marginLeft="2dp"/>

            <Button
                android:layout_width="90dp"
                android:layout_marginLeft="100dp"
                android:textSize="11dp"
                android:layout_marginTop="6dp"
                android:layout_height="38dp"
                android:text="Thêm"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_selector"
                android:id="@+id/btnAddOfficer" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
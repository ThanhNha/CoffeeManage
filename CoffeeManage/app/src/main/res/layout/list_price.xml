<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#33691E"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src="@drawable/coffee" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="257dp"
                    android:layout_height="32dp"
                    android:gravity="center_vertical"
                    android:text="DANH MỤC GIÁ THỨC UỐNG"
                    android:textColor="#ffffff"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="261dp"
                    android:layout_height="22dp"
                    android:gravity="center_vertical"
                    android:id="@+id/tvUserName"
                    android:text="Tên: Huỳnh Thanh Nhã"
                    android:textColor="#ffffff"
                    android:textSize="6pt" />

                <TextView
                    android:layout_width="261dp"
                    android:layout_height="22dp"
                    android:gravity="center_vertical"
                    android:id="@+id/tvAuth"
                    android:text="Cấp: Nhân viên"
                    android:textColor="#ffffff"
                    android:textSize="6pt" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#3F51B5"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingTop="7dp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:text="Tên thức uống"
            android:textSize="11dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="55dp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:text="Giá thức uống"
            android:textSize="11dp"
            android:layout_weight="0.23" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="25dp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:text="Ngày áp dụng"
            android:textSize="11dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lvPrice" />
    </LinearLayout>
</LinearLayout>